<Window x:Class="HarmonicSheet.Views.TutorialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="使い方ガイド"
        Width="700" Height="500"
        WindowStartupLocation="CenterScreen"
        FontFamily="Yu Gothic UI, Meiryo, Segoe UI"
        Background="#F8FAFC"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- メインコンテンツ -->
        <Border Grid.Row="0"
                Background="White"
                Margin="30,30,30,20"
                CornerRadius="15"
                Padding="40">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ステップ番号 -->
                <TextBlock x:Name="StepIndicator"
                           Grid.Row="0"
                           FontSize="18"
                           Foreground="#64748B"
                           Margin="0,0,0,10"/>

                <!-- タイトル -->
                <TextBlock x:Name="TitleText"
                           Grid.Row="1"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#1E293B"
                           TextWrapping="Wrap"
                           Margin="0,0,0,25"/>

                <!-- 説明 -->
                <TextBlock x:Name="DescriptionText"
                           Grid.Row="2"
                           FontSize="24"
                           Foreground="#334155"
                           TextWrapping="Wrap"
                           LineHeight="36"/>
            </Grid>
        </Border>

        <!-- ナビゲーションボタン -->
        <Grid Grid.Row="1" Margin="30,0,30,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- スキップボタン -->
            <Button x:Name="SkipButton"
                    Grid.Column="0"
                    Content="スキップ"
                    FontSize="18"
                    Padding="25,12"
                    Background="#E2E8F0"
                    Foreground="#64748B"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="OnSkipClick"/>

            <!-- プログレスバー -->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        x:Name="ProgressDots">
                <!-- ドットは動的に生成 -->
            </StackPanel>

            <!-- 戻るボタン -->
            <Button x:Name="PrevButton"
                    Grid.Column="2"
                    Content="← 戻る"
                    FontSize="18"
                    Padding="25,12"
                    Margin="0,0,10,0"
                    Background="#E2E8F0"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="OnPrevClick"/>

            <!-- 次へボタン -->
            <Button x:Name="NextButton"
                    Grid.Column="3"
                    Content="次へ →"
                    FontSize="18"
                    Padding="35,12"
                    Background="#2563EB"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="OnNextClick"/>
        </Grid>
    </Grid>
</Window>
