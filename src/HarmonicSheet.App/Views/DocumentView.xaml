<UserControl x:Class="HarmonicSheet.Views.DocumentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <!-- ツールバー -->
            <RowDefinition Height="Auto"/>
            <!-- コマンド入力エリア -->
            <RowDefinition Height="Auto"/>
            <!-- ドキュメント本体 -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ========================================== -->
        <!-- ツールバー: 大きなボタン -->
        <!-- ========================================== -->
        <Border Grid.Row="0"
                Background="{StaticResource SurfaceBrush}"
                Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Click="OnRecentClick"
                            ToolTip="最近使ったファイル">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE81C;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="前回使用"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Click="OnNewClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="新規"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Click="OnOpenClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="開く"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Click="OnSaveClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="保存"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Click="OnPrintClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE749;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="印刷"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Background="#6366F1"
                            Click="OnHelpClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE897;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="ヘルプ"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <TextBlock Grid.Column="1"
                           Text="例: 「挨拶文を追加して」「敬語に直して」"
                           FontSize="16"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Margin="10,0"/>
            </Grid>
        </Border>

        <!-- ========================================== -->
        <!-- コマンド入力: AIアシスタント -->
        <!-- ========================================== -->
        <Border Grid.Row="1"
                Background="#F0FDF4"
                Padding="10,8"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="CommandInput"
                         Grid.Column="0"
                         Style="{StaticResource LargeTextBoxStyle}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MinHeight="50"
                         MaxHeight="100"
                         VerticalScrollBarVisibility="Auto"
                         KeyDown="OnCommandKeyDown"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="8,0,0,0">
                    <Button Style="{StaticResource ActionButtonStyle}"
                            MaxWidth="100"
                            Click="OnExecuteCommand">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE768;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="実行"/>
                        </StackPanel>
                    </Button>

                    <!-- 音声入力ボタン（小さく） -->
                    <Button Content="&#xE720;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Background="Transparent"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            Padding="8"
                            Margin="6,0,0,0"
                            Cursor="Hand"
                            ToolTip="音声入力"
                            Click="OnVoiceInputClick"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ========================================== -->
        <!-- ドキュメント本体: リッチテキストエディタ -->
        <!-- ========================================== -->
        <syncfusion:SfRichTextBoxAdv x:Name="RichTextEditor"
                                      Grid.Row="2"
                                      FontSize="18"
                                      FontFamily="Yu Gothic UI, Meiryo"
                                      Margin="10"/>
    </Grid>
</UserControl>
