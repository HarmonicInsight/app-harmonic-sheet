<UserControl x:Class="HarmonicSheet.Views.DocumentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <!-- ツールバー -->
            <RowDefinition Height="Auto"/>
            <!-- コマンド入力エリア -->
            <RowDefinition Height="Auto"/>
            <!-- ドキュメント本体 -->
            <RowDefinition Height="*"/>
            <!-- ステータスバー -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ========================================== -->
        <!-- ツールバー: 大きなボタン -->
        <!-- ========================================== -->
        <Border Grid.Row="0"
                Background="{StaticResource SurfaceBrush}"
                Padding="15,10">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource ActionButtonStyle}"
                        Click="OnNewClick">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="0,0,10,0"/>
                        <TextBlock Text="新規"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ActionButtonStyle}"
                        Click="OnOpenClick">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="0,0,10,0"/>
                        <TextBlock Text="開く"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ActionButtonStyle}"
                        Click="OnSaveClick">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="0,0,10,0"/>
                        <TextBlock Text="保存"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ActionButtonStyle}"
                        Click="OnPrintClick">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE749;" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="0,0,10,0"/>
                        <TextBlock Text="印刷"/>
                    </StackPanel>
                </Button>

                <!-- 区切り -->
                <Separator Width="20" Background="Transparent"/>

                <!-- 読み上げボタン -->
                <Button Style="{StaticResource ActionButtonStyle}"
                        Background="#8B5CF6"
                        Click="OnReadAloudClick">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE767;" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="0,0,10,0"/>
                        <TextBlock Text="読み上げ"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ActionButtonStyle}"
                        Background="#6366F1"
                        Click="OnStopReadingClick">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE71A;" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="0,0,10,0"/>
                        <TextBlock Text="停止"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- ========================================== -->
        <!-- コマンド入力: AIアシスタント -->
        <!-- ========================================== -->
        <Border Grid.Row="1"
                Background="#F0FDF4"
                Padding="20,15"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="AIに手伝ってもらう（例：「挨拶文を追加して」「敬語に直して」）"
                               Style="{StaticResource BaseTextStyle}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="CommandInput"
                             Style="{StaticResource LargeTextBoxStyle}"
                             KeyDown="OnCommandKeyDown"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="15,25,0,0"
                        Click="OnExecuteCommand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE768;" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="0,0,10,0"/>
                        <TextBlock Text="実行"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- ========================================== -->
        <!-- ドキュメント本体: リッチテキストエディタ -->
        <!-- ========================================== -->
        <syncfusion:SfRichTextBoxAdv x:Name="RichTextEditor"
                                      Grid.Row="2"
                                      FontSize="18"
                                      FontFamily="Yu Gothic UI, Meiryo"
                                      Margin="10"/>

        <!-- ========================================== -->
        <!-- ステータスバー -->
        <!-- ========================================== -->
        <Border Grid.Row="3"
                Background="{StaticResource SurfaceBrush}"
                Padding="15,10"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText"
                           Text="文書を編集できます"
                           Style="{StaticResource BaseTextStyle}"/>

                <TextBlock x:Name="FileNameText"
                           Grid.Column="1"
                           Text="新しい文書"
                           Style="{StaticResource BaseTextStyle}"
                           Foreground="{StaticResource TextSecondaryBrush}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
