<UserControl x:Class="HarmonicSheet.Views.DocumentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <!-- ツールバー -->
            <RowDefinition Height="Auto"/>
            <!-- コマンド入力エリア -->
            <RowDefinition Height="Auto"/>
            <!-- ドキュメント本体 -->
            <RowDefinition Height="*"/>
            <!-- ステータスバー -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ========================================== -->
        <!-- ツールバー: 大きなボタン -->
        <!-- ========================================== -->
        <Border Grid.Row="0"
                Background="{StaticResource SurfaceBrush}"
                Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Click="OnRecentClick"
                            ToolTip="最近使ったファイル">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE81C;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="前回使用"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Click="OnNewClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="新規"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Click="OnOpenClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="開く"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Click="OnSaveClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="保存"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Click="OnPrintClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE749;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="印刷"/>
                        </StackPanel>
                    </Button>

                    <!-- 区切り -->
                    <Separator Width="12" Background="Transparent"/>

                    <!-- 読み上げボタン -->
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Background="#8B5CF6"
                            Click="OnReadAloudClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE767;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="読み上げ"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Background="#6366F1"
                            Click="OnStopReadingClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE71A;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="停止"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <TextBlock Grid.Column="1"
                           Text="例: 「挨拶文を追加して」「敬語に直して」"
                           FontSize="16"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Margin="10,0"/>
            </Grid>
        </Border>

        <!-- ========================================== -->
        <!-- コマンド入力: AIアシスタント -->
        <!-- ========================================== -->
        <Border Grid.Row="1"
                Background="#F0FDF4"
                Padding="10,8"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="CommandInput"
                         Grid.Column="0"
                         Style="{StaticResource LargeTextBoxStyle}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MinHeight="50"
                         MaxHeight="100"
                         VerticalScrollBarVisibility="Auto"
                         KeyDown="OnCommandKeyDown"/>

                <Button Grid.Column="1"
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="8,0,0,0"
                        MaxWidth="100"
                        Click="OnExecuteCommand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE768;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                        <TextBlock Text="実行"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- ========================================== -->
        <!-- ドキュメント本体: リッチテキストエディタ -->
        <!-- ========================================== -->
        <syncfusion:SfRichTextBoxAdv x:Name="RichTextEditor"
                                      Grid.Row="2"
                                      FontSize="18"
                                      FontFamily="Yu Gothic UI, Meiryo"
                                      Margin="10"/>

        <!-- ========================================== -->
        <!-- ステータスバー -->
        <!-- ========================================== -->
        <Border Grid.Row="3"
                Background="{StaticResource SurfaceBrush}"
                Padding="10,6"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0">
            <TextBlock x:Name="FileNameText"
                       Text="新しい文書"
                       Style="{StaticResource BaseTextStyle}"
                       Foreground="{StaticResource TextSecondaryBrush}"/>
        </Border>
    </Grid>
</UserControl>
