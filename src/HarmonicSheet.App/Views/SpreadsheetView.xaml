<UserControl x:Class="HarmonicSheet.Views.SpreadsheetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <!-- ツールバー -->
            <RowDefinition Height="Auto"/>
            <!-- 計算ボタンバー -->
            <RowDefinition Height="Auto"/>
            <!-- コマンド入力エリア -->
            <RowDefinition Height="Auto"/>
            <!-- スプレッドシート本体 -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ========================================== -->
        <!-- ツールバー: 大きなボタン -->
        <!-- ========================================== -->
        <Border Grid.Row="0"
                Background="{StaticResource SurfaceBrush}"
                Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Click="OnRecentClick"
                            ToolTip="最近使ったファイル">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE81C;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="前回使用"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Click="OnNewClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="新規"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Click="OnOpenClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="開く"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Click="OnSaveClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="保存"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Click="OnPrintClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE749;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="印刷"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Background="#6366F1"
                            Click="OnHelpClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE897;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="ヘルプ"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <TextBlock Grid.Column="1"
                           Text="例: 「A2に1万円入れて」「A1からA3を足してA4に」"
                           FontSize="16"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Margin="10,0"/>
            </Grid>
        </Border>

        <!-- ========================================== -->
        <!-- 計算ボタンバー -->
        <!-- ========================================== -->
        <Border Grid.Row="1"
                Background="{StaticResource SurfaceBrush}"
                Padding="8,6"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <WrapPanel Orientation="Horizontal">
                <Button Style="{StaticResource ActionButtonStyle}"
                        Background="#10B981"
                        Click="OnSumClick"
                        ToolTip="選択範囲の合計を計算">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8B2;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                        <TextBlock Text="合計(SUM)"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ActionButtonStyle}"
                        Background="#8B5CF6"
                        Click="OnAverageClick"
                        ToolTip="選択範囲の平均を計算">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8EF;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                        <TextBlock Text="平均"/>
                    </StackPanel>
                </Button>
            </WrapPanel>
        </Border>

        <!-- ========================================== -->
        <!-- コマンド入力: 自然言語で操作 -->
        <!-- ========================================== -->
        <Border Grid.Row="2"
                Background="#EFF6FF"
                Padding="10,8"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="CommandInput"
                         Grid.Column="0"
                         Style="{StaticResource LargeTextBoxStyle}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MinHeight="50"
                         MaxHeight="100"
                         VerticalScrollBarVisibility="Auto"
                         KeyDown="OnCommandKeyDown"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="8,0,0,0">
                    <Button Style="{StaticResource ActionButtonStyle}"
                            MaxWidth="100"
                            Click="OnExecuteCommand">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE768;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="実行"/>
                        </StackPanel>
                    </Button>

                    <!-- 音声入力ボタン（小さく） -->
                    <Button Content="&#xE720;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Background="Transparent"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            Padding="8"
                            Margin="6,0,0,0"
                            Cursor="Hand"
                            ToolTip="音声入力"
                            Click="OnVoiceInputClick"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ========================================== -->
        <!-- スプレッドシート本体とテンキー -->
        <!-- ========================================== -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- スプレッドシート本体 -->
            <syncfusion:SfSpreadsheet x:Name="Spreadsheet"
                                      Grid.Column="0"
                                      FontSize="16"
                                      Margin="10"/>

            <!-- テンキーと計算機能 -->
            <Border Grid.Column="1"
                    Width="200"
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1,0,0,0"
                    Padding="10">
                <StackPanel>
                    <TextBlock Text="テンキー"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,10"
                               HorizontalAlignment="Center"/>

                    <!-- 数字ボタン（7-9） -->
                    <UniformGrid Rows="1" Columns="3" Margin="0,0,0,5">
                        <Button Content="7" Click="OnNumericKeyClick" Tag="7" FontSize="20" Padding="10" Margin="2"/>
                        <Button Content="8" Click="OnNumericKeyClick" Tag="8" FontSize="20" Padding="10" Margin="2"/>
                        <Button Content="9" Click="OnNumericKeyClick" Tag="9" FontSize="20" Padding="10" Margin="2"/>
                    </UniformGrid>

                    <!-- 数字ボタン（4-6） -->
                    <UniformGrid Rows="1" Columns="3" Margin="0,0,0,5">
                        <Button Content="4" Click="OnNumericKeyClick" Tag="4" FontSize="20" Padding="10" Margin="2"/>
                        <Button Content="5" Click="OnNumericKeyClick" Tag="5" FontSize="20" Padding="10" Margin="2"/>
                        <Button Content="6" Click="OnNumericKeyClick" Tag="6" FontSize="20" Padding="10" Margin="2"/>
                    </UniformGrid>

                    <!-- 数字ボタン（1-3） -->
                    <UniformGrid Rows="1" Columns="3" Margin="0,0,0,5">
                        <Button Content="1" Click="OnNumericKeyClick" Tag="1" FontSize="20" Padding="10" Margin="2"/>
                        <Button Content="2" Click="OnNumericKeyClick" Tag="2" FontSize="20" Padding="10" Margin="2"/>
                        <Button Content="3" Click="OnNumericKeyClick" Tag="3" FontSize="20" Padding="10" Margin="2"/>
                    </UniformGrid>

                    <!-- 数字ボタン（0） -->
                    <UniformGrid Rows="1" Columns="3" Margin="0,0,0,5">
                        <Button Content="0" Click="OnNumericKeyClick" Tag="0" FontSize="20" Padding="10" Margin="2" Grid.ColumnSpan="2"/>
                        <Button Content="." Click="OnNumericKeyClick" Tag="." FontSize="20" Padding="10" Margin="2"/>
                        <Button Content="00" Click="OnNumericKeyClick" Tag="00" FontSize="20" Padding="10" Margin="2"/>
                    </UniformGrid>

                    <!-- 区切り線 -->
                    <Separator Margin="0,10"/>

                    <TextBlock Text="計算"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,5,0,10"
                               HorizontalAlignment="Center"/>

                    <!-- 四則演算ボタン -->
                    <UniformGrid Rows="1" Columns="2" Margin="0,0,0,5">
                        <Button Content="+" Click="OnOperatorClick" Tag="+" FontSize="24" Padding="10" Margin="2" Background="#3B82F6" Foreground="White"/>
                        <Button Content="-" Click="OnOperatorClick" Tag="-" FontSize="24" Padding="10" Margin="2" Background="#3B82F6" Foreground="White"/>
                    </UniformGrid>

                    <UniformGrid Rows="1" Columns="2" Margin="0,0,0,5">
                        <Button Content="×" Click="OnOperatorClick" Tag="*" FontSize="24" Padding="10" Margin="2" Background="#3B82F6" Foreground="White"/>
                        <Button Content="÷" Click="OnOperatorClick" Tag="/" FontSize="24" Padding="10" Margin="2" Background="#3B82F6" Foreground="White"/>
                    </UniformGrid>

                    <!-- イコールボタン -->
                    <Button Content="=" Click="OnEqualsClick" FontSize="24" Padding="10" Margin="2,5,2,2" Background="#10B981" Foreground="White"/>

                    <!-- クリアボタン -->
                    <Button Content="C (クリア)" Click="OnClearClick" FontSize="16" Padding="10" Margin="2" Background="#EF4444" Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
