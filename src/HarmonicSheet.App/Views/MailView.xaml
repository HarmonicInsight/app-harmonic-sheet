<UserControl x:Class="HarmonicSheet.Views.MailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- メール一覧 -->
            <ColumnDefinition Width="350"/>
            <!-- メール本文 -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ========================================== -->
        <!-- 左: メール一覧 -->
        <!-- ========================================== -->
        <Border Grid.Column="0"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,2,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ツールバー -->
                <Border Grid.Row="0" Padding="10">
                    <StackPanel>
                        <Button Style="{StaticResource ActionButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Click="OnNewMailClick">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="0,0,10,0"/>
                                <TextBlock Text="新しいメール"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource ActionButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Background="#6366F1"
                                Click="OnRefreshClick"
                                Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="0,0,10,0"/>
                                <TextBlock Text="受信"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- メール一覧 -->
                <ListBox x:Name="MailList"
                         Grid.Row="1"
                         SelectionChanged="OnMailSelected"
                         BorderThickness="0"
                         Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="15,12"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="0,0,0,1">
                                <StackPanel>
                                    <TextBlock Text="{Binding From}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding Subject}"
                                               FontSize="16"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding Date, StringFormat={}{0:M月d日 H:mm}}"
                                               FontSize="14"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- ========================================== -->
        <!-- 右: メール詳細/作成 -->
        <!-- ========================================== -->
        <Grid Grid.Column="1">
            <!-- メール閲覧モード -->
            <Grid x:Name="ReadPanel" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ヘッダー -->
                <Border Grid.Row="0"
                        Background="{StaticResource SurfaceBrush}"
                        Padding="20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Style="{StaticResource ActionButtonStyle}"
                                    Click="OnReplyClick">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE97A;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="返信"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource ActionButtonStyle}"
                                    Background="#8B5CF6"
                                    Click="OnReadAloudClick">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE767;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="読み上げ"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource ActionButtonStyle}"
                                    Background="#6366F1"
                                    Click="OnPrintMailClick">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE749;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="印刷"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <TextBlock x:Name="MailFrom"
                                   Text="送信者:"
                                   Style="{StaticResource BaseTextStyle}"
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="MailDate"
                                   Text="日時:"
                                   Style="{StaticResource BaseTextStyle}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="MailSubject"
                                   Text="件名"
                                   Style="{StaticResource LargeTextStyle}"/>
                    </StackPanel>
                </Border>

                <!-- 本文 -->
                <ScrollViewer Grid.Row="1" Padding="20">
                    <TextBlock x:Name="MailBody"
                               Text="メールを選んでください"
                               Style="{StaticResource BaseTextStyle}"
                               TextWrapping="Wrap"/>
                </ScrollViewer>

                <!-- ステータス -->
                <Border Grid.Row="2"
                        Background="{StaticResource SurfaceBrush}"
                        Padding="15,10"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,0,0">
                    <TextBlock x:Name="StatusText"
                               Text="メールを選んでください"
                               Style="{StaticResource BaseTextStyle}"/>
                </Border>
            </Grid>

            <!-- メール作成モード -->
            <Grid x:Name="ComposePanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 宛先・件名 -->
                <Border Grid.Row="0"
                        Background="{StaticResource SurfaceBrush}"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="宛先（メールアドレス）"
                                   Style="{StaticResource BaseTextStyle}"
                                   Margin="0,0,0,8"/>
                        <TextBox x:Name="ToInput"
                                 Style="{StaticResource LargeTextBoxStyle}"/>

                        <TextBlock Text="件名"
                                   Style="{StaticResource BaseTextStyle}"
                                   Margin="0,15,0,8"/>
                        <TextBox x:Name="SubjectInput"
                                 Style="{StaticResource LargeTextBoxStyle}"/>
                    </StackPanel>
                </Border>

                <!-- AIアシスタント -->
                <Border Grid.Row="1"
                        Background="#FEF3C7"
                        Padding="20,15"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="AIに手伝ってもらう（例：「お礼のメールを書いて」）"
                                       Style="{StaticResource BaseTextStyle}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,8"/>
                            <TextBox x:Name="AiCommandInput"
                                     Style="{StaticResource LargeTextBoxStyle}"/>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Style="{StaticResource ActionButtonStyle}"
                                Margin="15,25,0,0"
                                Click="OnAiAssistClick">
                            <TextBlock Text="お願い"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- 本文入力 -->
                <TextBox x:Name="BodyInput"
                         Grid.Row="2"
                         Style="{StaticResource LargeTextBoxStyle}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Margin="20"/>

                <!-- 送信ボタン -->
                <Border Grid.Row="3"
                        Background="{StaticResource SurfaceBrush}"
                        Padding="20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource ActionButtonStyle}"
                                Background="#9CA3AF"
                                Click="OnCancelComposeClick">
                            <TextBlock Text="キャンセル"/>
                        </Button>
                        <Button Style="{StaticResource ActionButtonStyle}"
                                Click="OnSendMailClick">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE724;" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="0,0,10,0"/>
                                <TextBlock Text="送信"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
