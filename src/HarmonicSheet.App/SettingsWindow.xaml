<Window x:Class="HarmonicSheet.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="設定"
        Width="700"
        Height="800"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">

                <!-- ========================================== -->
                <!-- AIアシスタント設定 -->
                <!-- ========================================== -->
                <Border Background="{StaticResource SurfaceBrush}"
                        CornerRadius="10"
                        Padding="25"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="AIアシスタント設定"
                                   Style="{StaticResource LargeTextStyle}"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="AIの機能を使うには、APIキーが必要です。"
                                   Style="{StaticResource BaseTextStyle}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Claude APIキー"
                                   Style="{StaticResource BaseTextStyle}"
                                   Margin="0,0,0,8"/>
                        <PasswordBox x:Name="ApiKeyInput"
                                     FontSize="18"
                                     Padding="15,12"
                                     PasswordChanged="OnApiKeyChanged"/>

                        <TextBlock x:Name="ApiKeyStatus"
                                   Text=""
                                   Style="{StaticResource BaseTextStyle}"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- ========================================== -->
                <!-- メール設定 -->
                <!-- ========================================== -->
                <Border Background="{StaticResource SurfaceBrush}"
                        CornerRadius="10"
                        Padding="25"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="メール設定"
                                   Style="{StaticResource LargeTextStyle}"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="メールを送受信するための設定です。"
                                   Style="{StaticResource BaseTextStyle}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="メールアドレス"
                                   Style="{StaticResource BaseTextStyle}"
                                   Margin="0,0,0,8"/>
                        <TextBox x:Name="EmailInput"
                                 Style="{StaticResource LargeTextBoxStyle}"/>

                        <TextBlock Text="パスワード"
                                   Style="{StaticResource BaseTextStyle}"
                                   Margin="0,15,0,8"/>
                        <PasswordBox x:Name="EmailPasswordInput"
                                     FontSize="18"
                                     Padding="15,12"/>

                        <TextBlock Text="表示名（送信者名）"
                                   Style="{StaticResource BaseTextStyle}"
                                   Margin="0,15,0,8"/>
                        <TextBox x:Name="DisplayNameInput"
                                 Style="{StaticResource LargeTextBoxStyle}"/>

                        <TextBlock Text="メールサーバー（上級者向け）"
                                   Style="{StaticResource BaseTextStyle}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,20,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="送信サーバー (SMTP)"
                                           FontSize="16"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="SmtpServerInput"
                                         Style="{StaticResource LargeTextBoxStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="1">
                                <TextBlock Text="ポート"
                                           FontSize="16"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="SmtpPortInput"
                                         Style="{StaticResource LargeTextBoxStyle}"
                                         Text="587"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,10,10,0">
                                <TextBlock Text="受信サーバー (IMAP)"
                                           FontSize="16"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="ImapServerInput"
                                         Style="{StaticResource LargeTextBoxStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,10,0,0">
                                <TextBlock Text="ポート"
                                           FontSize="16"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="ImapPortInput"
                                         Style="{StaticResource LargeTextBoxStyle}"
                                         Text="993"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- ========================================== -->
                <!-- 表示設定 -->
                <!-- ========================================== -->
                <Border Background="{StaticResource SurfaceBrush}"
                        CornerRadius="10"
                        Padding="25"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="表示設定"
                                   Style="{StaticResource LargeTextStyle}"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="読み上げ速度"
                                   Style="{StaticResource BaseTextStyle}"
                                   Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ゆっくり" FontSize="16" VerticalAlignment="Center"/>
                            <Slider x:Name="SpeechRateSlider"
                                    Width="300"
                                    Minimum="0"
                                    Maximum="10"
                                    Value="3"
                                    TickFrequency="1"
                                    IsSnapToTickEnabled="True"
                                    Margin="15,0"/>
                            <TextBlock Text="はやい" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- ========================================== -->
        <!-- 保存・キャンセルボタン -->
        <!-- ========================================== -->
        <Border Grid.Row="1"
                Background="{StaticResource SurfaceBrush}"
                Padding="20"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource ActionButtonStyle}"
                        Background="#9CA3AF"
                        Click="OnCancelClick">
                    <TextBlock Text="キャンセル"/>
                </Button>
                <Button Style="{StaticResource ActionButtonStyle}"
                        Click="OnSaveClick">
                    <TextBlock Text="保存"/>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
