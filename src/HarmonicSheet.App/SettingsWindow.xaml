<Window x:Class="HarmonicSheet.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="設定"
        Width="650"
        Height="700"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" Background="Transparent" BorderThickness="0" Padding="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="Padding" Value="15,8"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
            </TabControl.Resources>

            <!-- AIアシスタント設定タブ -->
            <TabItem Header="AIアシスタント">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="AIの機能を使うには、APIキーが必要です。"
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Claude APIキー"
                                   FontSize="14"
                                   Margin="0,0,0,6"/>
                        <PasswordBox x:Name="ApiKeyInput"
                                     FontSize="14"
                                     Padding="10,8"
                                     PasswordChanged="OnApiKeyChanged"/>

                        <TextBlock x:Name="ApiKeyStatus"
                                   Text=""
                                   FontSize="14"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- メール設定タブ -->
            <TabItem Header="メール">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="メールを送受信するための設定です。"
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="メールアドレス"
                                   FontSize="14"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="EmailInput"
                                 FontSize="14"
                                 Padding="10,8"
                                 BorderBrush="{StaticResource BorderBrush}"
                                 BorderThickness="2"/>

                        <TextBlock Text="パスワード"
                                   FontSize="14"
                                   Margin="0,12,0,6"/>
                        <PasswordBox x:Name="EmailPasswordInput"
                                     FontSize="14"
                                     Padding="10,8"/>

                        <TextBlock Text="表示名（送信者名）"
                                   FontSize="14"
                                   Margin="0,12,0,6"/>
                        <TextBox x:Name="DisplayNameInput"
                                 FontSize="14"
                                 Padding="10,8"
                                 BorderBrush="{StaticResource BorderBrush}"
                                 BorderThickness="2"/>

                        <TextBlock Text="メールサーバー（上級者向け）"
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,15,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="送信サーバー (SMTP)"
                                           FontSize="13"
                                           Margin="0,0,0,4"/>
                                <TextBox x:Name="SmtpServerInput"
                                         FontSize="14"
                                         Padding="8,6"
                                         BorderBrush="{StaticResource BorderBrush}"
                                         BorderThickness="2"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="1">
                                <TextBlock Text="ポート"
                                           FontSize="13"
                                           Margin="0,0,0,4"/>
                                <TextBox x:Name="SmtpPortInput"
                                         FontSize="14"
                                         Padding="8,6"
                                         Text="587"
                                         BorderBrush="{StaticResource BorderBrush}"
                                         BorderThickness="2"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,8,8,0">
                                <TextBlock Text="受信サーバー (IMAP)"
                                           FontSize="13"
                                           Margin="0,0,0,4"/>
                                <TextBox x:Name="ImapServerInput"
                                         FontSize="14"
                                         Padding="8,6"
                                         BorderBrush="{StaticResource BorderBrush}"
                                         BorderThickness="2"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,8,0,0">
                                <TextBlock Text="ポート"
                                           FontSize="13"
                                           Margin="0,0,0,4"/>
                                <TextBox x:Name="ImapPortInput"
                                         FontSize="14"
                                         Padding="8,6"
                                         Text="993"
                                         BorderBrush="{StaticResource BorderBrush}"
                                         BorderThickness="2"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- 表示設定タブ -->
            <TabItem Header="表示">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <!-- フォントサイズ調整 -->
                        <TextBlock Text="文字の大きさ"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="小" FontSize="12" VerticalAlignment="Center"/>
                            <Slider x:Name="FontScaleSlider"
                                    Grid.Column="1"
                                    Minimum="0.7"
                                    Maximum="1.5"
                                    Value="1.0"
                                    TickFrequency="0.1"
                                    IsSnapToTickEnabled="True"
                                    Margin="12,0"
                                    ValueChanged="OnFontScaleChanged"/>
                            <TextBlock Grid.Column="2" Text="大" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock x:Name="FontScalePercent"
                                       Grid.Column="3"
                                       Text="100%"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <!-- プレビュー -->
                        <Border Background="White"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5"
                                Padding="12"
                                Margin="0,12,0,0">
                            <TextBlock x:Name="FontPreviewText"
                                       Text="これはプレビューです。文字の大きさを確認できます。"
                                       TextWrapping="Wrap"
                                       FontSize="22"/>
                        </Border>

                        <TextBlock Text="読み上げ速度"
                                   FontSize="14"
                                   Margin="0,15,0,8"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ゆっくり" FontSize="13" VerticalAlignment="Center"/>
                            <Slider x:Name="SpeechRateSlider"
                                    Width="280"
                                    Minimum="-5"
                                    Maximum="5"
                                    Value="0"
                                    TickFrequency="1"
                                    IsSnapToTickEnabled="True"
                                    Margin="12,0"/>
                            <TextBlock Text="はやい" FontSize="13" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- 高コントラストモード -->
                        <CheckBox x:Name="HighContrastCheck"
                                  Content="高コントラストモード（文字をより見やすく）"
                                  FontSize="14"
                                  Margin="0,15,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- ヘルプタブ -->
            <TabItem Header="ヘルプ">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="使い方を確認できます。"
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,15"/>

                        <Button Content="使い方ガイドを見る"
                                FontSize="16"
                                Padding="15,10"
                                Background="#2563EB"
                                Foreground="White"
                                BorderThickness="0"
                                HorizontalAlignment="Left"
                                Click="OnShowTutorialClick"
                                Cursor="Hand"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- ========================================== -->
        <!-- 保存・キャンセルボタン -->
        <!-- ========================================== -->
        <Border Grid.Row="1"
                Background="{StaticResource SurfaceBrush}"
                Padding="20"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource ActionButtonStyle}"
                        Background="#9CA3AF"
                        Click="OnCancelClick">
                    <TextBlock Text="キャンセル"/>
                </Button>
                <Button Style="{StaticResource ActionButtonStyle}"
                        Click="OnSaveClick">
                    <TextBlock Text="保存"/>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
