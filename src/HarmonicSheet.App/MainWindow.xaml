<Window x:Class="HarmonicSheet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:HarmonicSheet.Views"
        Title="HarmonicOffice - かんたんオフィス"
        WindowState="Maximized"
        MinWidth="1200"
        MinHeight="800"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- 左サイドバー（タブ切り替え） -->
            <ColumnDefinition Width="Auto"/>
            <!-- メインコンテンツ -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ========================================== -->
        <!-- 左サイドバー: タブボタン縦並び -->
        <!-- ========================================== -->
        <Border Grid.Column="0"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,2,0"
                Width="100">
            <StackPanel>
                <!-- ロゴ -->
                <Border BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="5">
                    <TextBlock Text="HO"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               HorizontalAlignment="Center"
                               ToolTip="HarmonicOffice"/>
                </Border>

                <!-- タブボタン（縦並び） -->
                <!-- 1. 表（スプレッドシート） -->
                <RadioButton x:Name="TabSpreadsheet"
                             IsChecked="True"
                             Checked="OnTabChanged"
                             GroupName="MainTabs"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="10"
                             Margin="5,10,5,5"
                             Cursor="Hand">
                    <RadioButton.Template>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE80A;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="28"
                                               HorizontalAlignment="Center"
                                               Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock Text="表"
                                               FontSize="14"
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,0"
                                               Foreground="{StaticResource TextBrush}"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#EEEBE5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </RadioButton.Template>
                </RadioButton>

                <!-- 2. 文書 -->
                <RadioButton x:Name="TabDocument"
                             Checked="OnTabChanged"
                             GroupName="MainTabs"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="10"
                             Margin="5"
                             Cursor="Hand">
                    <RadioButton.Template>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE8A5;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="28"
                                               HorizontalAlignment="Center"
                                               Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock Text="文書"
                                               FontSize="14"
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,0"
                                               Foreground="{StaticResource TextBrush}"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#EEEBE5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </RadioButton.Template>
                </RadioButton>

                <!-- 3. メール -->
                <RadioButton x:Name="TabMail"
                             Checked="OnTabChanged"
                             GroupName="MainTabs"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="10"
                             Margin="5"
                             Cursor="Hand">
                    <RadioButton.Template>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE715;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="28"
                                               HorizontalAlignment="Center"
                                               Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock Text="メール"
                                               FontSize="14"
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,0"
                                               Foreground="{StaticResource TextBrush}"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#EEEBE5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </RadioButton.Template>
                </RadioButton>

                <!-- 設定ボタン -->
                <Button Content="&#xE713;"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="24"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{StaticResource TextSecondaryBrush}"
                        Padding="10"
                        Margin="5,20,5,5"
                        Cursor="Hand"
                        HorizontalAlignment="Center"
                        ToolTip="設定"
                        Click="OnSettingsClick"/>
            </StackPanel>
        </Border>

        <!-- ========================================== -->
        <!-- メインコンテンツ -->
        <!-- ========================================== -->
        <Grid Grid.Column="1">
            <!-- 文書ビュー -->
            <views:DocumentView x:Name="DocumentView"
                                Visibility="Visible"/>
            <!-- 表計算ビュー -->
            <views:SpreadsheetView x:Name="SpreadsheetView"
                                   Visibility="Collapsed"/>
            <!-- メールビュー -->
            <views:MailView x:Name="MailView"
                            Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Window>
